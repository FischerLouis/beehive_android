<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/zone_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:contentDescription="TODO"
        android:padding="1dp"
        android:src="@drawable/ic_launcher" />

    <!-- /// BUILDING NAME /// -->

    <TextView
        android:id="@+id/zone_name"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/zone_pic"
        android:maxLines="2"
        android:text="Zone Name"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:id="@+id/zone_separator"
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:layout_below="@+id/zone_name"
        android:layout_toRightOf="@+id/zone_pic"
        android:background="@color/black" />

    <TextView
        android:id="@+id/zone_description"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zone_separator"
        android:layout_toRightOf="@+id/zone_pic"
        android:maxLines="3"
        android:text="Zone Description"
        android:textColor="@color/black"
        android:textSize="12sp" />

</RelativeLayout>