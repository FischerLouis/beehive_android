<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- /// BUILDING NAME /// -->

    <ImageView
        android:id="@+id/subzone_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:contentDescription="TODO"
        android:padding="1dp"
        android:src="@drawable/library_icon" />

    <TextView
        android:id="@+id/subzone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/subzone_pic"
        android:maxLines="1"
        android:text="SubZone Name"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:id="@+id/subzone_separator"
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:layout_below="@+id/subzone_name"
        android:layout_toRightOf="@+id/subzone_pic"
        android:background="@color/black" />

    <TextView
        android:id="@+id/subzone_description"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subzone_separator"
        android:layout_toRightOf="@+id/subzone_pic"
        android:maxLines="3"
        android:text="SubZone Name"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <!-- /// OCCUPANCY /// -->

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subzone_description"
        android:layout_toRightOf="@+id/subzone_pic"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/occupancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:text="20% full"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- /// TIME TO GO /// -->

        <TextView
            android:id="@+id/time_to_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Go now!"
            android:textColor="@color/green"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>